<UserControl x:Class="Connectt.ChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Connectt"
             Height="Auto" Width="Auto">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Chats"
                           FontSize="24"
                           Foreground="White"
                           FontWeight="Bold"
                           Padding="10"/>
                <ListBox x:Name="FriendsList"
                         Background="#34495E"
                         Foreground="White"
                         BorderThickness="0"
                         FontSize="16"
                         SelectionChanged="FriendsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="10" Background="#3B5998" CornerRadius="8">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Chat Window -->
        <Grid Grid.Column="1" Background="#ECF0F1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Messages Display -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" x:Name="ChatScrollViewer">
                <StackPanel x:Name="MessagesPanel"/>
            </ScrollViewer>

            <!-- Message Input -->
            <DockPanel Grid.Row="1" Background="White" Margin="10" VerticalAlignment="Bottom">
                <TextBox x:Name="MessageTextBox"
                         Height="40"
                         FontSize="14"
                         Margin="5"
                         VerticalContentAlignment="Center"
                         Width="Auto"
                         Padding="10"
                         BorderBrush="#ccc"
                         BorderThickness="1"
                         Background="#F7F9FB"
                         DockPanel.Dock="Left"/>

                <Button Content="Send"
                        Background="#6C5CE7"
                        Foreground="White"
                        FontWeight="Bold"
                        Width="100"
                        Height="40"
                        Margin="5"
                        Click="SendButton_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
