<Window x:Class="Connectt.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wisper Auth"
        MinHeight="580" MinWidth="800"
        Height="580" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#EDEAE5">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="Ink" Color="#026670"/>
        <SolidColorBrush x:Key="InkSubtle" Color="#80026670"/>
        <SolidColorBrush x:Key="Warn" Color="#E74C3C"/>
        <SolidColorBrush x:Key="GlassFill" Color="#40FEF9C7"/>
        <SolidColorBrush x:Key="GlassStroke" Color="#60026670"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#026670" Offset="0"/>
            <GradientStop Color="#9FEDD7" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource GlassFill}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#30026670" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Typographic Styles -->
        <Style x:Key="Headline" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style x:Key="Subhead" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource InkSubtle}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Input Styles -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FEF9C7"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Ink}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bd" Property="Background" Value="#80FEF9C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FEF9C7"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Ink}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bd" Property="Background" Value="#80FEF9C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource NeonGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#60026670" BlurRadius="15" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FCE181"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" 
                                CornerRadius="10" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#80FCE181"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main layout Grid for responsiveness -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for the top tab buttons -->
            <RowDefinition Height="*"/>
            <!-- Row for the main form content, which will expand to fill available space -->
        </Grid.RowDefinitions>

        <!-- Close Button: Spans both rows to stay in the top-right corner -->
        <Button Grid.Row="0" Grid.RowSpan="2"
                Content="✕"
                Width="36" Height="36"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="10"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{StaticResource Ink}"
                Click="Button_Click"
                Panel.ZIndex="1"/>
        <!-- ZIndex ensures the close button stays on top of other content -->

        <!-- Toggle Tabs -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,60,0,20">
            <!-- Removed rigid vertical margins for better adaptability -->
            <Button x:Name="TabSignUp"
                    Content="Sign Up"
                    Width="100" Height="36"
                    Margin="4"
                    Style="{StaticResource PrimaryButton}"
                    Click="ShowSignUp_Click"/>
            <Button x:Name="TabSignIn"
                    Content="Sign In"
                    Width="100" Height="36"
                    Margin="4"
                    Style="{StaticResource SecondaryButton}"
                    Click="ShowSignIn_Click"/>
        </StackPanel>

        <!-- Forms Container: A Viewbox scales its content to fit the available space -->
        <Viewbox Grid.Row="1" Margin="20" Stretch="Uniform">
            <!-- The Grid inside the Viewbox holds the forms and provides a base size for scaling -->
            <Grid Width="420">
                <!-- Sign Up Form -->
                <Border x:Name="SignUpForm"
                        Style="{StaticResource GlassCard}"
                        MinHeight="400">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Create your secure account" Style="{StaticResource Headline}"/>
                        <TextBlock Grid.Row="1" Text="Welcome to Wisper — privacy-first messaging." Style="{StaticResource Subhead}"/>

                        <TextBlock Grid.Row="2" Text="Username" Foreground="{StaticResource InkSubtle}" Margin="0,4,0,6"/>
                        <TextBox Grid.Row="3" x:Name="NameTextBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Grid.Row="4" Text="Email address" Foreground="{StaticResource InkSubtle}" Margin="0,12,0,6"/>
                        <TextBox Grid.Row="5" x:Name="gmail" Style="{StaticResource RoundedTextBox}"/>

                        <StackPanel Grid.Row="7" x:Name="OtpPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,12,0,0">
                            <TextBlock x:Name="OTPLabel" Text="Enter OTP" Foreground="{StaticResource Ink}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <PasswordBox x:Name="OTPBox" Style="{StaticResource RoundedPasswordBox}" Width="170"/>
                        </StackPanel>

                        <TextBlock Grid.Row="8" x:Name="ErrorTextBlock" Foreground="{StaticResource Warn}" FontSize="13" FontWeight="SemiBold" Visibility="Collapsed" Margin="0,10,0,0"/>

                        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                            <Button x:Name="SignUpButton" Content="Sign up" Style="{StaticResource PrimaryButton}" Click="GetInfo"/>
                            <Button x:Name="VerifyButton" Content="Verify OTP" Style="{StaticResource PrimaryButton}" Click="VerifyOtp_Click" Visibility="Collapsed" Margin="12,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Sign In Form -->
                <Border x:Name="SignInForm"
                        Style="{StaticResource GlassCard}"
                        MinHeight="300"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Extra row for button -->
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Sign In to Wisper" Style="{StaticResource Headline}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="1" Text="Enter your credentials below" Style="{StaticResource Subhead}" HorizontalAlignment="Center"/>

                        <TextBlock Grid.Row="2" Text="Username or Email" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                        <TextBox Grid.Row="3" x:Name="SignInUsernameTextBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Grid.Row="4" Text="Password" Foreground="{StaticResource InkSubtle}" Margin="0,12,0,4"/>
                        <PasswordBox Grid.Row="5" x:Name="SignInPasswordBox" Style="{StaticResource RoundedPasswordBox}"/>

                        <TextBlock Grid.Row="6" x:Name="SignInError" Foreground="{StaticResource Warn}" FontSize="13" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,10,0,0"/>

                        <Button Grid.Row="7" Content="Sign In" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Center" Click="SignIn_Click" Margin="0,16,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
