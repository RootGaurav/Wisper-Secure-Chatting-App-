<Window x:Class="Connectt.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up"
        Height="520" Width="820"
        WindowStartupLocation="CenterScreen"
        Background="#0D0F1A">

    <!-- Resources (assumes these keys exist as used previously; adjust only if missing) -->
    <Window.Resources>
        <SolidColorBrush x:Key="Ink" Color="#E6FFFFFF"/>
        <SolidColorBrush x:Key="InkSubtle" Color="#A0FFFFFF"/>
        <SolidColorBrush x:Key="Warn" Color="#FFFF6B6B"/>
        <SolidColorBrush x:Key="GlassFill" Color="#10FFFFFF"/>
        <SolidColorBrush x:Key="GlassStroke" Color="#14FFFFFF"/>

        <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00C9FF" Offset="0"/>
            <GradientStop Color="#92FE9D" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource GlassFill}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6600C9FF" BlurRadius="18" ShadowDepth="0" Opacity="0.45"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Headline" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="Subhead" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource InkSubtle}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#26FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#00C9FF" Offset="0"/>
                                            <GradientStop Color="#92FE9D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4400C9FF" BlurRadius="12" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="BorderBrush" Value="#26FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#00C9FF" Offset="0"/>
                                            <GradientStop Color="#92FE9D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#4400C9FF" BlurRadius="12" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{StaticResource NeonGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.92"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#9900C9FF" BlurRadius="14" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Close button (kept) -->
        <Button Content="✕"
            Width="36" Height="36"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="10"
            Background="Transparent"
            BorderThickness="0"
            Foreground="{StaticResource Ink}"
            Click="Button_Click"/>

        <!-- Form card centered -->
        <Border Style="{StaticResource GlassCard}"
            Width="420"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- title -->
                    <RowDefinition Height="Auto"/>
                    <!-- subtitle -->
                    <RowDefinition Height="Auto"/>
                    <!-- username label -->
                    <RowDefinition Height="Auto"/>
                    <!-- username input -->
                    <RowDefinition Height="Auto"/>
                    <!-- email label -->
                    <RowDefinition Height="Auto"/>
                    <!-- email input -->
                    <RowDefinition Height="Auto"/>
                    <!-- OTP row -->
                    <RowDefinition Height="Auto"/>
                    <!-- error -->
                    <RowDefinition Height="Auto"/>
                    <!-- actions -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                   Text="Create your secure account"
                   Style="{StaticResource Headline}"/>
                <TextBlock Grid.Row="1"
                   Text="Welcome to Wisper — privacy-first messaging."
                   Style="{StaticResource Subhead}"/>

                <!-- Username -->
                <TextBlock Grid.Row="2"
                   Text="Username"
                   Foreground="{StaticResource InkSubtle}"
                   Margin="0,4,0,6"/>
                <TextBox Grid.Row="3"
                 x:Name="NameTextBox"
                 Style="{StaticResource RoundedTextBox}"/>

                <!-- Email -->
                <TextBlock Grid.Row="4"
                   Text="Email address"
                   Foreground="{StaticResource InkSubtle}"
                   Margin="0,12,0,6"/>
                <TextBox Grid.Row="5"
                 x:Name="gmail"
                 Style="{StaticResource RoundedTextBox}"/>

                <!-- OTP inline -->
                <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,12,0,0">
                    <TextBlock x:Name="OTPLabel"
                     Text="Enter OTP"
                     Visibility="Collapsed"
                     Foreground="{StaticResource Ink}"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"/>
                    <PasswordBox x:Name="OTPBox"
                       Style="{StaticResource RoundedPasswordBox}"
                       Width="170"
                       Visibility="Collapsed"/>
                </StackPanel>

                <!-- Error -->
                <TextBlock Grid.Row="7"
                   x:Name="ErrorTextBlock"
                   Foreground="{StaticResource Warn}"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Visibility="Collapsed"
                   Margin="0,10,0,0"/>

                <!-- Actions -->
                <StackPanel Grid.Row="8"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,16,0,0">
                    <Button Content="Sign up"
                  Style="{StaticResource PrimaryButton}"
                  Click="GetInfo"/>
                    <Button Content="Verify OTP"
                  x:Name="VerifyButton"
                  Style="{StaticResource PrimaryButton}"
                  Click="VerifyOtp_Click"
                  Visibility="Collapsed"
                  Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
