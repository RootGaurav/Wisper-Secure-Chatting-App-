<Window x:Class="Connectt.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wisper Auth"
        MinHeight="580" MinWidth="800"
        Height="580" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#EDEAE5">

    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="Ink" Color="#026670"/>
        <SolidColorBrush x:Key="InkSubtle" Color="#80026670"/>
        <SolidColorBrush x:Key="Warn" Color="#E74C3C"/>
        <SolidColorBrush x:Key="GlassFill" Color="#40FEF9C7"/>
        <SolidColorBrush x:Key="GlassStroke" Color="#60026670"/>

        <!-- Gradients -->
        <LinearGradientBrush x:Key="NeonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#026670" Offset="0"/>
            <GradientStop Color="#9FEDD7" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Style -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource GlassFill}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassStroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#30026670" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Typographic Styles -->
        <Style x:Key="Headline" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <Style x:Key="Subhead" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource InkSubtle}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Input Styles -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FEF9C7"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Ink}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bd" Property="Background" Value="#80FEF9C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FEF9C7"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Ink}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="Bd" Property="Background" Value="#80FEF9C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource NeonGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Ink}"/>
            <Setter Property="Background" Value="#60FCE181"/>
            <Setter Property="BorderBrush" Value="#80026670"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.RowSpan="2"
                Content="✕"
                Width="36" Height="36"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Background="Transparent"
                BorderThickness="0"
                Foreground="{StaticResource Ink}"
                Click="Button_Click"
                Panel.ZIndex="1"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,20">
            <Button x:Name="TabSignUp" Content="Sign Up" Width="100" Height="36" Margin="4"
                    Style="{StaticResource PrimaryButton}" Click="ShowSignUp_Click"/>
            <Button x:Name="TabSignIn" Content="Sign In" Width="100" Height="36" Margin="4"
                    Style="{StaticResource SecondaryButton}" Click="ShowSignIn_Click"/>
        </StackPanel>

        <Viewbox Grid.Row="1" Margin="20" Stretch="Uniform">
            <Grid Width="420">
                <!-- SIGNUP -->
                <Border x:Name="SignUpForm" Style="{StaticResource GlassCard}" MinHeight="400">
                    <StackPanel>
                        <TextBlock Text="Create your secure account" Style="{StaticResource Headline}" />
                        <TextBlock Text="Welcome to Wisper — privacy-first messaging." Style="{StaticResource Subhead}" />

                        <TextBlock Text="Username" Foreground="{StaticResource InkSubtle}" Margin="0,4,0,6"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Text="Email address" Foreground="{StaticResource InkSubtle}" Margin="0,12,0,6"/>
                        <TextBox x:Name="gmail" Style="{StaticResource RoundedTextBox}"/>

                        <StackPanel x:Name="OtpPanel" Orientation="Horizontal" Visibility="Collapsed" Margin="0,12,0,0">
                            <TextBlock Text="Enter OTP" Foreground="{StaticResource Ink}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="OTPBox" Style="{StaticResource RoundedPasswordBox}" Width="170"/>
                        </StackPanel>

                        <TextBlock x:Name="ErrorTextBlock" Foreground="{StaticResource Warn}" FontSize="15"
                                   FontWeight="SemiBold" TextWrapping="Wrap" Visibility="Collapsed"
                                   Margin="0,10,0,0" Padding="8" Background="#FFFFF8F8"
                                   HorizontalAlignment="Stretch" TextAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                            <Button x:Name="SignUpButton" Content="Sign up" Style="{StaticResource PrimaryButton}" Click="GetInfo"/>
                            <Button x:Name="VerifyButton" Content="Verify OTP" Style="{StaticResource PrimaryButton}"
                                    Click="VerifyOtp_Click" Visibility="Collapsed" Margin="12,0,0,0"/>
                            <Button x:Name="ResendOtpButton" Content="Resend OTP" Style="{StaticResource SecondaryButton}"
                                    Click="ResendOtp_Click" Visibility="Collapsed" Margin="12,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- SIGNIN -->
                <Border x:Name="SignInForm" Style="{StaticResource GlassCard}" Visibility="Collapsed" MinHeight="340">
                    <StackPanel>
                        <TextBlock Text="Sign In to Wisper" Style="{StaticResource Headline}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter your credentials below" Style="{StaticResource Subhead}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Username" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                        <TextBox x:Name="SignInUsernameTextBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Text="Password" Foreground="{StaticResource InkSubtle}" Margin="0,12,0,4"/>
                        <PasswordBox x:Name="SignInPasswordBox" Style="{StaticResource RoundedPasswordBox}"/>

                        <Border Margin="0,10,0,0" Background="#FFFFF8F8" CornerRadius="8" Padding="6"
                                Visibility="Collapsed" x:Name="SignInErrorContainer">
                            <TextBlock x:Name="SignInError" Foreground="{StaticResource Warn}"
                                       FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </Border>

                        <Button Content="Sign In" Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Center" Click="SignIn_Click" Margin="0,20,0,0"/>

                        <StackPanel HorizontalAlignment="Center" Margin="0,18,0,0">
                            <TextBlock Text="Forgot Password?" Foreground="{StaticResource Ink}" FontWeight="SemiBold"
                                       FontSize="13" HorizontalAlignment="Center"/>
                            <Button x:Name="ForgotPasswordButton" Content="Reset via OTP" Style="{StaticResource SecondaryButton}"
                                    Width="160" Height="36" Click="ForgotPassword_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- FORGOT PASSWORD -->
                <Border x:Name="ForgotPasswordPanel" Style="{StaticResource GlassCard}" Visibility="Collapsed" MinHeight="400">
                    <StackPanel>
                        <TextBlock Text="Reset Your Password" Style="{StaticResource Headline}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter your username and registered email" Style="{StaticResource Subhead}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Username" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                        <TextBox x:Name="ForgotUsernameBox" Style="{StaticResource RoundedTextBox}"/>

                        <TextBlock Text="Registered Email" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                        <TextBox x:Name="ForgotGmailBox" Style="{StaticResource RoundedTextBox}"/>

                        <Border Margin="0,10,0,0" Background="#FFFFF8F8" CornerRadius="8" Padding="6"
                                Visibility="Collapsed" x:Name="ForgotErrorContainer">
                            <TextBlock x:Name="ForgotErrorText" Foreground="{StaticResource Warn}"
                                       FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </Border>

                        <StackPanel x:Name="ForgotButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                            <Button x:Name="SendOtpButton" Content="Send OTP" Style="{StaticResource PrimaryButton}" Click="SendResetOtp_Click"/>
                            <Button x:Name="BackButton" Content="Back" Style="{StaticResource SecondaryButton}" Margin="12,0,0,0" Click="BackToSignIn_Click"/>
                        </StackPanel>

                        <StackPanel x:Name="ResetStep2Panel" Visibility="Collapsed" Margin="0,18,0,0" HorizontalAlignment="Center">
                            <TextBlock Text="Enter OTP and new password" Foreground="{StaticResource InkSubtle}" HorizontalAlignment="Center" Margin="0,0,0,6"/>
                            <TextBlock Text="OTP" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                            <PasswordBox x:Name="ResetOtpBox" Style="{StaticResource RoundedPasswordBox}" Width="240"/>
                            <TextBlock Text="New Password" Foreground="{StaticResource InkSubtle}" Margin="0,6,0,4"/>
                            <PasswordBox x:Name="NewPasswordBox" Style="{StaticResource RoundedPasswordBox}" Width="240"/>
                            <Button Content="Reset Password" Style="{StaticResource PrimaryButton}" Click="ResetPassword_Click"
                                    Width="180" Height="40" Margin="0,10,0,0"/>
                            <Button x:Name="BackButton2" Content="Back" Style="{StaticResource SecondaryButton}" Margin="12,0,0,0" Click="BackToSignIn_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
