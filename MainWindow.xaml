<Window x:Class="Connectt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Extrovet" Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F6FA">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" MinWidth="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" Background="#FF2D3436" CornerRadius="0,10,10,0">
            <StackPanel VerticalAlignment="Center" Margin="0,20,0,-120">

                <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="12" FontWeight="Medium" Click="FriendRequestButton_Click">
                    <Button.OpacityMask>
                        <ImageBrush ImageSource="/Friend_Request.png"/>
                    </Button.OpacityMask>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Background="Transparent" Padding="10,8">
                                <StackPanel>
                                    <Image Source="/Friend_Request.png"  Width="60" Height="69"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="Requests" Margin="0,5,0,0" Foreground="White" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3DFFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="12" FontWeight="Medium" Margin="0,50,0,0"  Click="ChatButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Background="Transparent" Padding="10,8">
                                <StackPanel>
                                    <Image Source="/Chat_1.png" Width="54" Height="59"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="Chat" Margin="0,5,0,0" Foreground="White" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3DFFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="12" FontWeight="Medium" Margin="0,105,10,10" Click="Button_Click" Height="55">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Background="Transparent" Padding="10,8">
                                <StackPanel Height="87">
                                    <Image  Width="59" Height="58"
                                           RenderOptions.BitmapScalingMode="HighQuality">
                                        <Image.OpacityMask>
                                            <ImageBrush />
                                        </Image.OpacityMask>
                                    </Image>
                                    <TextBlock Text="" Margin="0,5,0,0" Foreground="White" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3DFFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" Background="#FF6C5CE7" CornerRadius="10,10,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Extrovet" 
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10"/>

                    <Button Grid.Column="1"
        Width="30"
        Height="30"
        Margin="10"
        VerticalAlignment="Center"
        FontSize="18"
        ToolTip="Reload"
        Click="ReloadButton_Click"
        Background="Transparent"
        BorderThickness="0"
        Foreground="White"
        Cursor="Hand">
                        🔄
                    </Button>
                </Grid>
            </Border>


            <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="10">
                <ContentControl x:Name="MainContent"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"/>
            </Border>
        </Grid>
    </Grid>
</Window>